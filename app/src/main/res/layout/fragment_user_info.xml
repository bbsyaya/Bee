<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_user_info"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/information"
            android:textColor="@color/logo_color"
            android:textSize="@dimen/mark1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/staff_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/staff_name_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/staff_name_mark"
            android:textColor="@color/font_color1"
            android:textSize="@dimen/mark2" />

        <ImageView
            android:id="@+id/staff_name_arrow"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/staff_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/staff_name_arrow"
            android:text="曾义"
            android:textColor="@color/font_color2"
            android:textSize="@dimen/content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/staff_phone"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/staff_phone_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="@string/staff_phone_mark"
                android:textColor="@color/font_color1"
                android:textSize="@dimen/mark2" />

            <ImageView
                android:id="@+id/staff_phone_arrow"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/staff_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/staff_phone_arrow"
                android:text="13618260376"
                android:textColor="@color/font_color2"
                android:textSize="@dimen/content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/staff_email"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/staff_email_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="@string/staff_email_mark"
                android:textColor="@color/font_color1"
                android:textSize="@dimen/mark2" />

            <ImageView
                android:id="@+id/staff_email_arrow"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/right_arrow" />

            <TextView
                android:id="@+id/staff_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/staff_email_arrow"
                android:text="394383693@qq.com"
                android:textColor="@color/font_color2"
                android:textSize="@dimen/content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/staff_join_time"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/staff_join_time_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="@string/staff_join_time_mark"
                android:textColor="@color/font_color1"
                android:textSize="@dimen/mark2" />

            <TextView
                android:id="@+id/staff_join_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="2015年12月12日"
                android:textColor="@color/font_color2"
                android:textSize="@dimen/content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/more"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/phone_pressed_selector"
        android:paddingBottom="5dp"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/more_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="更多管理"
            android:textColor="@color/font_color1"
            android:textSize="@dimen/mark2" />

        <TextView
            android:id="@+id/more_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/font_color2"
            android:textSize="@dimen/content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/check_version"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/phone_pressed_selector"
            android:paddingBottom="5dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/check_version_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="@string/check_version_mark"
                android:textColor="@color/font_color1"
                android:textSize="@dimen/mark2" />

            <TextView
                android:id="@+id/check_version_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="未知"
                android:textColor="@color/font_color2"
                android:textSize="@dimen/content" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/scanner"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/phone_pressed_selector"
            android:paddingBottom="5dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/scanner_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="@string/scanner_mark"
                android:textColor="@color/font_color1"
                android:textSize="@dimen/mark2" />

            <ImageView
                android:id="@+id/scanner_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitEnd"
                android:src="@drawable/scanner" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/staff_manage_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" >

            <Button
                android:id="@+id/submit_logout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_button_pressed_selector"
                android:gravity="center"
                android:text="@string/logout_button"
                android:textColor="#fff" />
    </RelativeLayout>
</LinearLayout>